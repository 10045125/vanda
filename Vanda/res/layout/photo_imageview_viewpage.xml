<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
     <com.vanda.beivandalibnetwork.utils.ViewPagerFixed
        android:id="@+id/content_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
     
     <FrameLayout 
         android:id="@+id/frame_layout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:background="@drawable/news_bg_bottom">
         
         <RelativeLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/color_backgroud">
             
         <TextView 
             android:id="@+id/title"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_alignParentLeft="true"
             android:padding="10dp"
             android:layout_toLeftOf="@+id/ll"
             android:text="123453"
             android:textColor="@color/color_textcolor_white"
             android:textSize="14sp"/>   
         
         <LinearLayout 
             android:id="@+id/ll"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:gravity="center"
             android:padding="10dp"
             android:orientation="horizontal"
             android:background="@color/color_backgroud">
               <TextView 
             android:id="@+id/title_1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/color_textsize_fe4200"
             android:textSize="17sp"/>   
               <TextView 
             android:id="@+id/title_2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/color_textcolor_white"
             android:text="/"
             android:textSize="14sp"/>   
               <TextView 
             android:id="@+id/title_3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/color_textcolor_white"
             android:textSize="14sp"/>   
         </LinearLayout>
         
         </RelativeLayout>
         
     </FrameLayout>

</RelativeLayout>
