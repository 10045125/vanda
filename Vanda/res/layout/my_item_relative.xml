<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="@drawable/linearlayout_item_select_color">
<!--     @color/color_backgroud -->
<TextView 
     android:id="@+id/my_item_relative_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:padding="10dp"
    android:textColor="#888888"
    android:textSize="16sp"/>

<ImageView 
     android:id="@+id/my_item_relative_iv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:layout_marginRight="@dimen/layout_marginright_content"
    android:background="@drawable/imageview_selector"
    android:contentDescription="@null"/>
</RelativeLayout>
