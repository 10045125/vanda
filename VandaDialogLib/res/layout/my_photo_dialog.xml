<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_backgroud"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/photo_shape_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/photo_shape_btn_bg"
            android:orientation="vertical" >

            <Button
                android:id="@+id/photo_take_picture"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_dp_photo_take_photo"
                android:background="#00000000"
                android:text="@string/btn_take_photo"
                android:textColor="@drawable/photo_select_text_color"
                android:textSize="@dimen/text_size_take_photo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/photo_line" />

            <Button
                android:id="@+id/photo_take_cell_picture"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_dp_photo_take_photo"
                android:background="#00000000"
                android:text="@string/btn_take_cell_pic"
                android:textColor="@drawable/photo_select_text_color"
                android:textSize="@dimen/text_size_take_photo" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/photo_shape_bg"
        android:orientation="vertical" >

        <Button
            android:id="@+id/photo_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_dp_photo_take_photo"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/photo_shape_btn_bg"
            android:text="@string/btn_take_cancel"
            android:textColor="@drawable/photo_select_text_color"
            android:textSize="@dimen/text_size_take_photo" />
    </LinearLayout>

</LinearLayout>